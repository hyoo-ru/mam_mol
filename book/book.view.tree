$mol_book $mol_view
	sub <= pages_wrapped /
	pages /
	plugins /
		<= Meter $mol_meter
			width => width
	Page!index $mol_book_page
		Sub <= page!index null
		visible <= page_visible!index true
	Placeholder $mol_book_placeholder
		title <= title -

$mol_book_placeholder $mol_view
	minimal_width 400
	sub /
		<= title -

$mol_book_page $mol_ghost
	attr *
		^
		mol_book_page_visible <= visible true	
